<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#01453A"
            android:gravity="right"
    >

        <LinearLayout

                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"

                android:layout_marginTop="2dp"

                android:gravity="right"
                android:orientation="horizontal">


            <TextView
                    android:id="@+id/tvNotification_Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="2dp"
                    android:fontFamily="@font/arabicnormal"
                    android:layout_marginStart="2dp"
                    android:text="خصم على فواتير الضرائب عند التسديد بقيمة 20% على الدفع خلال شهر 1"
                    android:textColor="@android:color/white"
                    android:textSize="16dp"


            />

            <ImageView

                    android:id="@+id/info"
                    android:layout_width="30dp"
                    android:layout_height="30dp"

                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:scaleType="fitXY"

                    android:src="@drawable/notificationicon" />


        </LinearLayout>
        <TextView
                android:id="@+id/tvNotification_Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01/01/2018"
                android:textColor="@android:color/white"
                android:textSize="16dp"
                android:layout_gravity="left"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="5dp"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/arabicnormal"
        />

    </RelativeLayout>


</RelativeLayout>
