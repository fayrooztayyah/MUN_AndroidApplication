<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.ComplaintSwitchboardActivity">
    <LinearLayout
            android:layout_marginTop="70dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
    >

        <Button
                android:id="@+id/btnPreviousComplaint"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/cornerbutton"
                android:text="الشكاوي السابقة"
                android:textSize="20dp"
                android:fontFamily="@font/arbicblack"
                android:textColor="@android:color/white"

        />
        <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

        <Button
                android:id="@+id/btnDelayedComplaints"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/cornerbutton"
                android:text="الشكاوي الغير مرسلة"
                android:textSize="20dp"
                android:fontFamily="@font/arbicblack"
                android:textColor="@android:color/white"
        />
        <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />
        <Button
                android:id="@+id/btnSubmitComplaint"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/cornerbutton"
                android:text="تقديم شكوى"
                android:textSize="20dp"
                android:fontFamily="@font/arbicblack"
                android:textColor="@android:color/white"
        />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>