<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:orientation="vertical"
                                             android:padding="4dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:gravity="right"
    >
        <LinearLayout
                android:id="@+id/liner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                android:gravity="right"
        >
            <TextView
                    android:id="@+id/tvComplaintAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="تست "
                    android:textColor="@android:color/black"
                    android:layout_marginEnd="2dp"
                    android:layout_marginStart="2dp"
                    android:fontFamily="@font/arbicblack"
                    android:lines="1"
                    android:textSize="18dp"/>

            <TextView

                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="العنوان: "
                    android:textAppearance="?android:attr/textAppearanceButton"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/arabicnormal"
                    android:textSize="18dp"

                    android:lines="1"

            />


        </LinearLayout>

        <LinearLayout
                android:id="@+id/dateL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                android:gravity="right"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/liner"
        >
            <TextView
                    android:id="@+id/complaintDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10/10/2018 "
                    android:textColor="@android:color/black"
                    android:layout_marginEnd="2dp"
                    android:layout_marginStart="2dp"
                    android:fontFamily="@font/arbicblack"
                    android:lines="1"
                    android:textSize="18dp"/>

            <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="تاريخ تقديم الشكوى: "
                    android:textAppearance="?android:attr/textAppearanceButton"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/arabicnormal"
                    android:textSize="18dp"

                    android:lines="1"

            />


        </LinearLayout>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:fontFamily="@font/arbicblack"
                android:text="@string/underlined_text"

                android:layout_below="@+id/dateL"/>

    </RelativeLayout>
</RelativeLayout>
